---
import GitHub from "./icons/GitHub.astro"
import ReactJS from "./icons/ReactJS.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Bootstrap from "./icons/Bootstrap.astro"
import HTML from "./icons/HTML.astro"
import Css from "./icons/Css.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import NodeJs from "./icons/NodeJs.astro"

const TAGS = {
  REACT: {
    name: "React.js",
    class: "bg-[#003159] text-white",
    icon: ReactJS,
  },
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  Node: {
    name: "Node.js",
    class: "bg-black text-white",
    icon: NodeJs,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-[#003159] text-white",
    icon: Bootstrap,
  },
  HTML: {
    name: "HTML5",
    class: "bg-[#003159] text-white",
    icon: HTML,
  },
  CSS: {
    name: "CSS3",
    class: "bg-[#003159] text-white",
    icon: Css,
  },
}
const PROJECTS = [
  {
    title: "Dashboard - POKEDEX",
    description:
      "Este proyecto esta hecho con NextJs, Redux Toolkit y esta desplegado en Vercel.",
    link: "https://cursonextfh.vercel.app/",
    github: "https://github.com/cesart20/cursonextfh",
    image: "/projects/dashboard.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "REST API - POSTS-API-MERN",
    description:
      "Este proyecto esta hecho con Node, Express MongoDB, Swagger, esta desplegado en Render y MongoCloud.",
    link: "https://deploy-backend-api-mern.onrender.com/api-docs/",
    github: "https://github.com/cesart20/api-rest-mern",
    image: "/projects/rest-api-mern.webp",
    tags: [TAGS.Node, TAGS.REACT],
  },
  {
    title: "Portafolio Personal - ReactJs",
    description:
      "Este proyecto esta hecho con ReactJs, CSS y esta desplegado en Vercel.",
    link: "https://portafolio-flax-rho.vercel.app/",
    github: "https://github.com/cesart20/portafolio",
    image: "/projects/portafolio-personal.webp",
    tags: [TAGS.REACT],
  },
  {
    title: "Página en Bootstrap",
    description:
      "Esta página esta hecho con Bootstrap y desplegado en GitHub pages, tiene de tematica página de adopción, se utiliza variables en css y bootstrap.",
    link: "https://ctorres20.github.io/adopcion/index.html",
    github: "https://github.com/Ctorres2020/Proyecto-del-curso-de-Bootstrap",
    image: "/projects/pagina-en-Bootstrap.webp",
    tags: [TAGS.BOOTSTRAP],
  },
  {
    title: "Copia de Netflix",
    description:
      "Maquetación con Html y Css para un intento de copia de netflix.",
    link: "https://ctorres20.github.io/copianetflix/index.html",
    github: "https://github.com/Ctorres2020/Netflixproyecto",
    image: "/projects/copia-de-netflix.webp",
    tags: [TAGS.HTML, TAGS.CSS],
  },
  {
    title: "CryptoPrice",
    description:
      "En este sitio se uso una API externa para ver los diferentes precios de las criptomonedas, se creo con REACT NATIVE - Expo y se desplego en Firebase.",
    link: "https://crypto-react-native-6c65d.web.app/",
    github: "https://github.com/Ctorres2020/CryptoPrice",
    image: "/projects/crypto-price.webp",
    tags: [TAGS.REACT],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4"  />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



